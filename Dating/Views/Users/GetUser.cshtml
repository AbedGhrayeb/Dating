@model UserDetailesViewModel
@{
    ViewData["Title"] = "GetUser";
}

<div class="row">
    <h1>@Model.KnownAs's Profile</h1>
</div>
<div class="row">
    <div class="col-sm-4">
        <div class="card">
            <div div class="card-img">
                <img class="img-fluid img-thumbnail m-2" src="@Model.PhotoUrl" alt="@Model.KnownAs" />
            </div> 
            <div class="card-body">
                <div>
                    <strong>Location:</strong>
                    <p>@Model.Country, @Model.City</p>
                </div>
                  <div>
                    <strong>Age:</strong>
                    <p>@Model.Age</p>
                </div>
                  <div>
                    <strong>Last Active:</strong>
                    <p>@Model.LastActive</p>
                </div>
                <div>
                    <strong>Member Since:</strong>
                    <p>@Model.Created</p>
                </div>

            </div>
            <div class="card-footer d-flex justify-content-center">
                <div class="btn-group-justified">
                   
                    <div class="btn-group">
                        <button class="btn btn-primary">Like</button>

                    </div>
                    <div class="btn-group">
                        <button class="btn btn-success">Message</button>
                    </div>
                      
                  
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="card">
            <div class="card-body m-2">
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab"
                           aria-controls="home" aria-selected="true">About @Model.KnownAs</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="interests-tab" data-toggle="tab" href="#interests" role="tab"
                           aria-controls="interests" aria-selected="false">Interests</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="photos-tab" data-toggle="tab" href="#photos" role="tab"
                           aria-controls="photos" aria-selected="false">Photos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="messages-tab" data-toggle="tab" href="#messages" role="tab"
                           aria-controls="messages" aria-selected="false">Messages</a>
                    </li>
                </ul>
                
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active mt-3" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <h4>Description:</h4>
                        <p class="lead">@Model.Introduction</p>
                        <h4>Looking For:</h4>
                        <p class="lead">@Model.LookingFor</p>
                    </div>
                    <div class="tab-pane fade mt-3" id="interests" role="tabpanel" aria-labelledby="interests-tab">
                        <h4>Description:</h4>
                        <p class="lead">@Model.Interests</p>
                    </div>
                    <div class="tab-pane fade mt-4 ml-4" id="photos" role="tabpanel" aria-labelledby="photos-tab">
                       <p>
                            <div class="main-photo d-flex mb-5">
                              @foreach (var p in Model.Photos)
                              {
                                  if (p.IsMain)
                                  {
                                      <img asp-append-version="true" class="img-thumbnail d-block w-25 mb-2" src="@p.Url" alt="@Model.KnownAs" />
                                  }
                              }
                            </div>
                            <div id="carouselExampleIndicators" class="photos carousel slide mt-3" data-ride="carousel">
                                <ol class="carousel-indicators">
                                    @for (int i = 0; i < Model.Photos.Count; i++)
                                    {
                                        <li data-target="#carouselExampleIndicators" data-slide-to="[i]"></li>

                                    }

                                    @*<li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>*@
                                </ol>
                                <div class="carousel-inner">
                                    @foreach (var item in Model.Photos)
                                    {
                                        <div class="carousel-item active">
                                            <img src="@item.Url" class="d-block w-100" alt="...">
                                        </div>
                                    
                                    }

                                </div>
                                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                        </p>
                    </div>
                    <div class="tab-pane fade mt-3" id="messages" role="tabpanel" aria-labelledby="messages-tab">
                        <p class="lead">Message will go here</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>