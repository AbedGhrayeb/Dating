@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="row justify-content-md-center">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2 class="text-center text-primary">Sign Up</h2>

            <hr>
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <input asp-for="Input.Name" placeholder="Username" class="form-control" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.DateOfBirth"></label>
                <input asp-for="Input.DateOfBirth" class="form-control" placeholder="Birth Date"/>
                <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Input.Country" class="form-control" placeholder="Country" />
                <span asp-validation-for="Input.Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Input.City" class="form-control" placeholder="City" />
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Phone Number"/>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                Im.. <br />
                    @foreach (var gender in Model.Genders)
                    {
                        <div class="form-check form-check-inline">
                            <input type="radio" asp-for="Input.Gender" value="@gender" class="form-check-input" />
                            <label class="form-check-label" asp-for="Input.Gender">@gender</label>
                        </div>
                    }

           <span asp-validation-for="Input.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Input.Password" class="form-control" placeholder="Password"/>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirm Password"/>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button class="btn btn-success btn-lg mr-2" type="submit">Register</button>
                <a class="btn btn-secondary btn-lg" asp-action="Index" asp-controller="Home">Cancel</a>
            </div>        
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
