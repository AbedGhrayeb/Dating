@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;

}

    <div class="card">
        <div div class="card-header">
            <h4>@ViewData["Title"]</h4>
            <partial name="_StatusMessage" for="StatusMessage" />
        </div>
        
                    <form id="profile-form" method="post">
                        <div class="card-body justify-content-center m-1">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group row">
                                <label asp-for="Username" class="col-form-label col-sm-3"></label>
                                <input asp-for="Username" class="form-control col-sm-9" disabled />
                            </div>
                            <div class="form-group row">
                                <label asp-for="Input.Email" class="col-form-label col-sm-3"></label>
                                @if (Model.IsEmailConfirmed)
                                {
                                    <div class="input-group">
                                        <input asp-for="Input.Email" class="form-control col-sm-9" />
                                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                    </div>
                                }
                                else
                                {
                                    <input asp-for="Input.Email" class="form-control col-sm-9" />
                                    <div class="col-sm-3"></div>
                                    <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link">Send verification email</button>
                                }
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Input.PhoneNumber" class="col-sm-3 col-form-label"> Phone Number</label>
                                <input asp-for="Input.PhoneNumber" class="form-control col-sm-9" />
                                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button id="update-profile-button" type="submit" class="btn btn-success">Update Profile</button>
                        </div>                    
                    </form>
                </div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}